@page "/Options"

<DtwoGrid Gap="2rem" class="rz-p-0 rz-p-lg-4">
    <DtwoGridItem Size="12">
        <DtwoForm TValue="Dtwo.API.Configuration.PathsConfiguration" Value="@Paths.Config" FormData="@OptionsFormData" />
    </DtwoGridItem>
    <DtwoGridItem Size="12">
        <DtwoForm TValue="Configuration.Configuration" Value="@Configuration.Configuration.Instance" FormData="@LogsFormData" />
    </DtwoGridItem>
</DtwoGrid>

@code {
    private FormData OptionsFormData = new FormData("Chemins", new List<FormData.Field>()
    {
        new FormData.Field()
        {
            FieldAsmName = nameof(Paths.Config.JpexsPath),
            Title = "Chemin de JPEXS (facultatif)",
        }
    });

    private FormData LogsFormData = new FormData("Logs", new List<FormData.Field>()
    {
        new FormData.Field()
        {
            FieldAsmName = nameof(Configuration.Configuration.IsDebug),
            Title = "Debug Mode",
        },
        new FormData.Field()
        {
            FieldAsmName = nameof(Configuration.Configuration.LogToFile),
            Title = "Ecrire les logs dans un fichier",
        },
    });
}
